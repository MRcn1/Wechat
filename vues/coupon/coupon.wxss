page {
    background-color: #ededed;
}

.coupon-top {
    width: 100%;
    height: 80rpx;
    background-color: #fff;
    display: flex;
    font-size: 26rpx;
    color: #666;
    line-height: 80rpx;
    justify-content: space-around;
}

.active {
    position: relative;
}

.active:after {
    width: 100%;
    content: ' ';
    height: 3px;
    background-color: #803b36;
    position: absolute;
    bottom: 0;
    left: 0;
}

.coupon-selset {
    width: 100%;
    height: 54rpx;
    background-color: #feede3;
    font-size: 22rpx;
    color: #666;
    line-height: 54rpx;
    padding: 5rpx 15rpx;
    box-sizing: border-box;
}

.coupon-list {
    width: 710rpx;
    height: 200rpx;
    background-color: #fff;
    margin: 0 auto;
    margin-top: 20rpx;
    position: relative;
}

.coupon-list-zheng {
    width: 200rpx;
    height: 200rpx;
    background-color: #803b36;
    display: inline-block;
    text-align: center;
    overflow: hidden;
}

.coupon-list-fang {
    width: 500rpx;
    height: 200rpx;
    background-color: #fff;
    display: inline-block;
    overflow: hidden;
    padding: 40rpx 10rpx 0 20rpx;
    box-sizing: border-box;
}

.coupon-list-big {
    color: #fff;
    font-size: 60rpx;
    display: block;
    margin-top: 31rpx;
}

.coupon-list-small {
    color: #fff;
    display: block;
    font-size: 20rpx;
}

.coupon-list-fang-big {
    color: #333;
    font-size: 28rpx;
    display: block;
}

.coupon-list-fang-small {
    color: #333;
    display: block;
    font-size: 22rpx;
    margin-top: 30rpx;
}

.coupon-list-img {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    top: 80rpx;
    right: 15rpx;
}

.coupon-list-img image {
    width: 40rpx;
    height: 40rpx;
}

.coupon-btn {
    margin: 203rpx 0;
}

.coupon-btn button {
    width: 594rpx;
    height: 80rpx;
    background-color: #803b36;
    border-radius: 10rpx;
	color: #fff;
}
