.imma {
    width: 710rpx;
    height: 125rpx;
    background-color: #fff;
    margin: 0 auto;
    margin-top: 20rpx;
    padding-top: 21rpx;
    display: flex;
    border-radius: 10rpx;
}

.imma .left {
    width: 127rpx;
    height: 78rpx;
    margin-left: 30rpx;
    margin-top: 15rpx;
}

.imma .left image {
    width: 100%;
    height: 100%;
}

.imma .right {
    width: 515rpx;
    height: 126rpx;
    padding-left: 20rpx;
    margin-top: -10rpx;
    overflow: auto;
}

.imma .right p {
    display: inline-block;
    position: relative;
    width: 500rpx;
    margin-top: 10rpx;
}

.imma .right text {
    display: inline-block;
    width: 330rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 27rpx;
}

.imma .right .time {
    width: 107rpx;
    color: #ccc;
}

.imma .right image {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    right: 5rpx;
    top: 3rpx;
}

