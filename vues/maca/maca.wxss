/* vues/maca/maca.wxss */
.top{
    width: 750rpx;
    height: 185rpx;
    background: url('https://cdn.lastmiles.cn/apps/6478513551412572160.png?size=5557');
    background-size: cover;
    overflow: hidden;
}
.top .mymaca{
    height: 40rpx;
    margin: 0 auto;
    margin-top: 50rpx;
    text-align: center;
}
.top .mymaca .img{
    width: 41rpx;
    height: 32rpx;
    vertical-align: middle;
}
.top .mymaca span{
    color: #efc369;
}
.top .mymaca .small{
    font-size: 28rpx;
    margin-left: 10rpx;
}
.top .mymaca .big{
    font-size:48rpx;
}
.three{
    width: 100%;
    height: 60rpx;
    background-color: #f8f8f8;
    text-align: center;
	line-height: 60rpx;
}
.three text{
    font-size: 24rpx;
    color: #999999;
}
.list{
    margin-top: 20rpx;
}
.list .box{
    width: 100%;
    height: 100rpx;
    border-bottom: 1rpx solid #f0f0f0;
    position: relative;
}
.list .box view{
    display: inline-block;
    height: 100rpx;
    margin-top: -15rpx;
}

.list .box image{
    width: 25rpx;
    height: 30rpx;
    margin: 15rpx 0 0 33rpx;
    vertical-align: top;
}
.list .box .order{
    margin-left: 25rpx;
    font-size: 30rpx;
    padding-top: 10rpx;
}
.list .box .order p{
    display: block;
    margin: 10rpx 0
}
.list .box .right{
    position: absolute;
    right: 20rpx;
    top: 30rpx;
    font-size: 34rpx;
    color: #f03022;
}